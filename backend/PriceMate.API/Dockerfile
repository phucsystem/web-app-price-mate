FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src
COPY Directory.Build.props .
COPY PriceMate.sln .
COPY backend/PriceMate.Domain/PriceMate.Domain.csproj backend/PriceMate.Domain/
COPY backend/PriceMate.Application/PriceMate.Application.csproj backend/PriceMate.Application/
COPY backend/PriceMate.Infrastructure/PriceMate.Infrastructure.csproj backend/PriceMate.Infrastructure/
COPY backend/PriceMate.API/PriceMate.API.csproj backend/PriceMate.API/
RUN dotnet restore
COPY . .
RUN dotnet publish backend/PriceMate.API/PriceMate.API.csproj -c Release -o /app/publish

FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS runtime
WORKDIR /app
COPY --from=build /app/publish .
EXPOSE 8080
ENTRYPOINT ["dotnet", "PriceMate.API.dll"]
